<h3>新規投稿</h3>
<%= form_for @content do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :artist %>
        <%= f.text_field :artist %>
    </div>
    <div class="field">
        <%= f.label :video %>
        <%= f.text_field :video %>
    </div>
    <div class="field">
        <%= f.label :comment %>
        <%= f.text_field :comment %>
    </div>
    <div class="button">
        <%= f.submit "投稿する" %>
    </div>
<% end %>
<div class="link">
    <%= link_to "投稿一覧に戻る", contents_path %>
</div>