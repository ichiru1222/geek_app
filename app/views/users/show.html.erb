<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if user_signed_in? %>
    <% if current_user.id == @user.id %>
        <%= link_to "編集する", edit_user_registration_path %>
    <% end %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.contents.each do |c| %>
        <div class="contents">
            <%= c.title %>
            <%= c.artist %>
            <%= c.video %>
            <%= c.my_comment %>
            <%= c.created_at %>
        </div>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_contents.each do |c| %>
        <div class="contents">
            <%= c.title %>
            <%= c.artist %>
            <%= c.video %>
            <%= c.my_comment %>
            <%= c.created_at %>
        </div>
<% end %>
<!-- ここまで-->

<%= link_to "投稿一覧に戻る", contents_path %>